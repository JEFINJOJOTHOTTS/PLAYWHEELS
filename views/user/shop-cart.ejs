            <script>

                //delete, edit cart products
                function quantityOne(proId, count) {
                    let quantity = parseInt(document.getElementById(proId).innerHTML)
                    console.log(quantity)
                    count = parseInt(count)
                    let secondStage = true

                    if ((quantity == 1 && count == -1) || count == 0) {
                        secondStage = false
                        let conform = confirm('do you want to remove this product from cart ?')
                        if (conform) {
                            console.log(conform)
                            secondStage = true
                            quantity = 1
                            count = -1
                        }
                    }
                    if (secondStage) {
                        const data = {
                            quantity: quantity,
                            proId: proId,
                            count: count
                        };

                        //axios
                        axios.post('/cart/editProduct', data)
                            .then((response) => {
                                const editProduct = response.data;

                                if (quantity == 1 && count == -1) {
                                    location.reload();
                                } else {
                                    console.log("quantity   ", quantity)
                                    quantity = quantity + count;
                                    document.getElementById(proId).innerHTML = quantity;
                                    $(`#Total-${proId}`).load(`/cart #Total-${proId}`);
                                    $('#cartTotal').load('/cart #cartTotal');
                                    $('#cartDiscountedTotal').load('/cart #cartDiscountedTotal');

                                }
                            })

                    }
                }



                async function stockAvailability(event) {
                    event.preventDefault()
                    axios.get('/shockAvailabilityOrder').then((response) => {
                        console.log(response.data)
                        if (response.data) {
                            // document.getElementById("CheckOutButon").href();
                            window.location.href = '/placeOrder';
                        }
                        else {
                            swal({text:`Product Unavailable`})
                            location.reload();
                        }

                    })
                }


            </script>
